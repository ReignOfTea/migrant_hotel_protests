# Telegram Logger (optional - for error logging)
TELEGRAM_BOT_TOKEN=
TELEGRAM_LOG_CHANNEL_ID=

# GitHub
GITHUB_TOKEN=
REPO_OWNER=
REPO_NAME=

# URLs (optional, defaults shown)
WEBSITE_URL=
GITHUB_REPO_URL=

# Scheduler settings (optional, defaults shown)
EVENT_CLEANUP_DAYS=7
REPEATING_EVENT_ADVANCE_WEEKS=4

# Webhook: when GitHub pushes to the repo, trigger repeating-events processing.
# In GitHub: Settings → Webhooks → Add webhook:
#   Payload URL: https://your-server.example.com/webhook/github
#   Content type: application/json
#   Secret: (same value as GITHUB_WEBHOOK_SECRET)
#   Events: Just the push event
GITHUB_WEBHOOK_SECRET=
WEBHOOK_PORT=3456
WEBHOOK_PATH=/webhook/github
WEBHOOK_BRANCH=refs/heads/master

# Polling fallback: check repeating-events.json via GitHub API every N seconds (0 = disabled).
# Use if you can't receive webhooks (e.g. behind NAT). Max delay = REPEATING_EVENTS_POLL_SECONDS.
REPEATING_EVENTS_POLL_SECONDS=0